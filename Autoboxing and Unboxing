import java.util.ArrayList;
import java.util.Scanner;

public class AutoboxingUnboxingDemo {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        ArrayList<Integer> numbers = new ArrayList<>();

        System.out.println("Enter integers as strings (type 'done' to finish):");

        while (true) {
            String input = scanner.nextLine();

            if (input.equalsIgnoreCase("done")) {
                break;
            }

            try {
                // Parse string input to int
                int num = Integer.parseInt(input);

                // Autoboxing: primitive int -> Integer object
                numbers.add(num);

            } catch (NumberFormatException e) {
                System.out.println("Invalid input. Please enter an integer or 'done'.");
            }
        }

        // Calculate sum using unboxing
        int sum = 0;
        for (Integer number : numbers) {
            // Unboxing: Integer -> int automatically
            sum += number;
        }

        System.out.println("Numbers entered: " + numbers);
        System.out.println("Sum of numbers: " + sum);
    }
}
